<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/"> <i class="fas fa-angle-double-left"></i> All Users</a>
      </div>
    </div>

    <div class="form-title text-center">
      <h2 class="text-dark">Update User</h2>
      <span class="text-light"
        >use the below form to update an new account</span
      >
    </div>
    <!-- add user form -->
    <!-- <form handling  -->
    <form method="POST" id="update_user">
      <div class="new_user">
        <div class="form-group">
          <label for="name" class="text-light">Name</label>
          <input name="id" value="<%= user._id %>" type="hidden" />
          <input
            placeholder="Jeevan Vaishnav"
            type="text"
            name="name"
            value="<%= user.name %>"
          />
        </div>

        <div class="form-group">
          <label for="email" class="text-light">Email</label>
          <input
            value="<%= user.email %>"
            placeholder="jeevan@gmail.com"
            type="text"
            name="email"
          />
        </div>

        <div class="form-group">
          <label for="gender" class="text-dark">Gender</label>
          <div class="radio inline">
            <input value="Male" id="radio-1" type="radio" name="gender" <%=
            user.gender =='Male' ? 'checked':"" %> />
            <label for="radio-1" class="radio-label">Male</label>
          </div>

          <div class="radio inline">
            <input value="Female" id="radio-2" type="radio" name="gender" <%=
            user.gender =='Female' ? 'checked':"" %> />
            <label for="radio-2" class="radio-label">Female</label>
          </div>
        </div>

        <div class="form-group">
          <label for="status" class="text-dark">Status</label>
          <div class="radio inline">
            <input value="Active" id="radio-3" type="radio" name="status"
            <%=user.status =='Active' ? 'checked':"" %> />
            <label for="radio-3" class="radio-label">Active</label>
          </div>

          <div class="radio inline">
            <input value="Inactive" id="radio-4" type="radio" name="status" <%=
            user.status =='Inactive' ? 'checked':"" %> />
            <label for="radio-4" class="radio-label">Inactive</label>
          </div>
        </div>

        <div class="form-group">
          <button class="btn" type="submit" class="btn text-dark update">
            Save
          </button>
        </div>
      </div>
    </form>
  </div>
</main>
